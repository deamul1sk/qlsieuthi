<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption" *ngIf="isUpdate===true">
                    <i class="fa fa-globe"></i>{{ 'SIDEBAR.Directory' | translate }} > {{ 'SIDEBAR.TTHC' | translate }} > {{ 'Action.Update'
                    | translate }}
                </div>
                <div class="caption" *ngIf="isUpdate===false">
                    <i class="fa fa-globe"></i>{{ 'SIDEBAR.Directory' | translate }} > {{ 'SIDEBAR.TTHC' | translate }} > {{ 'Action.Create'
                    | translate }}
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="form-horizontal align-middle" [formGroup]="tthcForm" (ngSubmit)="submit(tthcForm.value)">
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="id" type="hidden" class="form-control" formControlName="id" />
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="code">{{ 'TTHC.TTHCCode' | translate }}
                                            <span style="color:red;"> *</span>
                                        </label>
                                        <div class="col-md-8">
                                            <input id="code" type="text" ng-trim="true" class="form-control" formControlName="code" placeholder="{{ 'TTHC.TTHCCode' | translate }}"
                                            />
                                            <small class="error" *ngIf="tthcForm.get('code').invalid && (tthcForm.get('code').touched)">
                                                <span *ngIf="tthcForm.get('code').errors.required">
                                                    {{ 'Message.Required' | translate }}
                                                </span>
                                                <span *ngIf="!tthcForm.get('code').errors.required&&tthcForm.get('code').errors.pattern!=null">
                                                    {{ 'Message.CodeInvalid' | translate }}
                                                </span>
                                                <span *ngIf="!tthcForm.get('code').errors.required&&tthcForm.get('code').errors.maxlength!=null">
                                                    {{ 'Message.MaxLength' | translate }} 10
                                                </span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="name">{{ 'TTHC.TTHCName' | translate }}
                                            <span style="color:red;"> *</span>
                                        </label>
                                        <div class="col-md-8">
                                            <input id="name" type="text" class="form-control" formControlName="name" placeholder="{{ 'TTHC.TTHCName' | translate }}"
                                            />
                                            <small class="error" *ngIf="tthcForm.get('name').invalid && (tthcForm.get('name').touched)">
                                                <span *ngIf="tthcForm.get('name').errors.required||tthcForm.get('name').errors.pattern!=null">
                                                    {{ 'Message.Required' | translate }}
                                                </span>
                                                <span *ngIf="!tthcForm.get('name').errors.required&&tthcForm.get('name').errors.maxlength!=null">
                                                    {{ 'Message.MaxLength' | translate }} 100
                                                </span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="id" type="hidden" class="form-control" formControlName="id" />
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="abbreviation">{{ 'TTHC.Abbreviation' | translate }}
                                        </label>
                                        <div class="col-md-8">
                                            <input id="abbreviation" type="text" ng-trim="true" class="form-control" formControlName="abbreviation" placeholder="{{ 'TTHC.Abbreviation' | translate }}"
                                            />
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="description">{{ 'TTHC.Description' | translate }}
                                        </label>
                                        <div class="col-md-8">
                                            <textarea class="form-control" id="description" formControlName="description" cols="4"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="id" type="hidden" class="form-control" formControlName="id" />
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="no">{{ 'TTHC.NO' | translate }}
                                            <span style="color:red;"> *</span>
                                        </label>
                                        <div class="col-md-8">
                                            <input id="no" type="number" ng-trim="true" class="form-control" formControlName="no" placeholder="{{ 'TTHC.NO' | translate }}"
                                            />
                                            <small class="error" *ngIf="(tthcForm.get('no').touched)">
                                                <span *ngIf="tthcForm.get('no').value==null">
                                                    {{ 'Message.Required' | translate }}
                                                </span>
                                                <span *ngIf="tthcForm.get('no').value<0">
                                                    {{ 'Message.NumberInvalid' | translate }}
                                                </span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" *ngIf="isUpdate===true">
                                    <div class="form-group">
                                        <label class="control-label col-md-4" for="status">{{'TTHC.Status'|translate}}
                                            <span style="color:red;"> *</span>
                                        </label>
                                        <div class="col-md-8">
                                            <input type="hidden" required>
                                            <select class="form-control" formControlName="status" autofocus>
                                                <option *ngFor="let status of listStatus" [value]="status.id">{{status.name}}</option>
                                            </select>
                                            <small class="error" *ngIf="tthcForm.get('status').invalid 
                                  && (tthcForm.get('status').touched)">
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" [disabled]="!isValidForm()">{{ 'Action.Save' | translate }}</button>
                                <button type="button" class="btn default" (click)="goBack()">
                                    <i class="fa fa-undo" aria-hidden="true"></i>{{ 'Action.Back' | translate }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>