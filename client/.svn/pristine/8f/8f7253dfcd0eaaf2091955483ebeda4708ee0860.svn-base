<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>{{ 'SIDEBAR.Directory' | translate }} > {{ 'SIDEBAR.Country' | translate }}
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <button *ngIf="isAuthoriziedNavigation()" class="btn green" [routerLink]="['/country', 'create', '']" id="form-add-btn">
                                <i class="fa fa-plus"></i>{{ 'Action.Create' | translate }}</button>
                            <button *ngIf="isAuthoriziedNavigation()" class="btn green-jungle" (click)="exportExcel()" id="form-download-btn">
                                <i class="fa fa-download"></i>{{ 'Action.ExportExcel' | translate }}</button>
                            <button class="btn red" *ngIf="numberDeleteItems && isAuthoriziedNavigation()" (click)="deleteCheckedItems()" id="form-remove-btn">
                                <i class="fa fa-trash-o"></i>{{ 'Action.Delete' | translate }}</button>
                        </div>
                    </div>
                    <div style="padding:2px;"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <form class="form-horizontal align-middle" [formGroup]="filterForm" (ngSubmit)="getPageCountry(filterForm.value, 0)" method="POST">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-4" for="countryName">{{ 'Country.CountryName'
                                                | translate }}</label>
                                            <div class="col-md-8">
                                                <input id="countryName" ng-trim="true" type="text" class="form-control" placeholder="{{ 'Country.CountryName' | translate }}"
                                                    formControlName="countryName">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-4" for="countryCode">{{ 'Country.CountryCode'
                                                | translate }}</label>
                                            <div class="col-md-8">
                                                <input id="countryCode" ng-trim="true" type="text" class="form-control" placeholder="{{ 'Country.CountryCode' | translate }}"
                                                    formControlName="countryCode">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-4" for="status">{{'Country.Status'|translate}}</label>
                                            <div class="col-md-8">
                                                <select id="status" class="form-control" formControlName="status" autofocus>
                                                    <option value="">{{ 'Label.All' | translate }}</option>
                                                    <option *ngFor="let status of listStatus" [value]="status.id">{{status.name}}</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn green">{{ 'Action.Search' | translate }}</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="list-data-table" [mfData]="this.countryInfo.content" #mf="mfDataTable">
                    <thead>
                        <tr>
                            <th (change)="countNumberDeleteItems()">
                                <div class="checker">
                                    <span [class.checked]="checkAllItemFlag">
                                        <input id="checkAll" type="checkbox" [(ngModel)]="checkAllItemFlag" (click)="checkAllItem()" />
                                    </span>
                                </div>
                            </th>
                            <th>
                                <mfDefaultSorter by="countryName">{{ 'Country.CountryName' | translate }}</mfDefaultSorter>
                            </th>
                            <th>
                                <mfDefaultSorter by="englishName">{{ 'Country.EnglishName' | translate }}</mfDefaultSorter>
                            </th>
                            <th>
                                <mfDefaultSorter by="countryCode">{{ 'Country.CountryCode' | translate }}</mfDefaultSorter>
                            </th>
                            <th>
                                <mfDefaultSorter by="modifier">{{ 'Country.Modifier' | translate }}</mfDefaultSorter>
                            </th>
                            <th>
                                <mfDefaultSorter by="status">{{'Country.Status'|translate}}</mfDefaultSorter>
                            </th>
                            <th>
                                <a>{{ 'Label.Action' | translate }}</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX" *ngFor="let item of mf.data" [ngClass]="item.checked===true?'info':''">
                            <td class="table-checkbox" (change)="countNumberDeleteItems()">
                                <div class="checker">
                                    <span [class.checked]="item.checked">
                                        <input id="checkOne" type="checkbox" [(ngModel)]="item.checked" />
                                    </span>
                                </div>
                            </td>

                            <td>
                                <a [routerLink]="['/country/detail', item.id]">
                                    {{item.countryName}}
                                </a>
                            </td>
                            <td>{{item.englishName}}</td>
                            <td>{{item.countryCode}}</td>
                            <td>{{item.modifier}}</td>
                            <td>{{item.status==1?'Active':'Inactive'}}</td>
                            <td text-align="center">
                                <a class="btn btn-icon-only blue" title="{{ 'Action.Detail' | translate }}" id="business-btn" [routerLink]="['/country/detail', item.id]">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>
                                <a *ngIf="isAuthoriziedNavigation()" class="btn btn-icon-only green" title="{{ 'Action.Update' | translate }}" id="business-btn"
                                    [routerLink]="['/country', 'update', item.id]">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                                <a *ngIf="isAuthoriziedNavigation()" class="btn btn-icon-only red" title="{{ 'Action.Delete' | translate }}" id="business-btn"
                                    (click)="deleteOneItem(item.id)">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-4">
                        {{fromElement}} - {{toElement}} {{ 'Label.InTotal' | translate }} {{countryInfo.totalElements}} {{ 'Label.Items' | translate
                        }}
                    </div>
                    <div class="col-md-4 pull-right">
                        {{ 'Label.Page' | translate }}
                        <button type="button" title="{{ 'Action.FirstPage' | translate }}" class="btn btn-sm default prev" [disabled]="(currentPage+1)<=1"
                            (click)="choosePageNumber(0)">
                            <i class="fa fa-angle-double-left"></i>
                        </button>
                        <button type="button" title="{{ 'Action.Previous' | translate }}" class="btn btn-sm default prev" [disabled]="(currentPage+1)<=1"
                            (click)="choosePageNumber(currentPage-1)">
                            <i class="fa fa-angle-left"></i>
                        </button>
                        <input type="number" min="1" max="{{countryInfo.totalPages}}" style="border: none; width: 30px; text-align: center;" [value]="currentPageView"
                            #page (keyup.enter)="choosePageNumber(page)"> /
                        <label style="padding-right: 5px;">{{countryInfo.totalPages}}</label>
                        <button type="button" title="{{ 'Action.Next' | translate }}" class="btn btn-sm default next" [disabled]="(currentPage+1)>=countryInfo.totalPages"
                            (click)="choosePageNumber(currentPage+1)">
                            <i class="fa fa-angle-right"></i>
                        </button>
                        <button type="button" title="{{ 'Action.LastPage' | translate }}" class="btn btn-sm default next" [disabled]="(currentPage+1)>=countryInfo.totalPages"
                            (click)="choosePageNumber(countryInfo.totalPages-1)">
                            <i class="fa fa-angle-double-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

